{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Tên</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Giá</th>
                <td>{{ product.Price }}</td>
            </tr>
             <tr>
                <th>Mô Tả</th>
                <td>{{ product.description }}</td>
            </tr>
             <tr>
                <th>Hình Ảnh</th>
                <td><img src="{{ asset('images/product/' ~ product.getImage()) }}" width="200px" height="155px"></td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_product_index') }}">back to list</a>
    <h1>Để Thêm Sản Phẩm Vào Giỏ Hàng, Bạn Cần Đăng Nhập</h1>
    
    <br></br>
    {% if is_granted('ROLE_ADMIN')%}
    
     {{ include('product/_delete_form.html.twig') }}
    {% endif %}
    
    
    </div>
{% endblock %}