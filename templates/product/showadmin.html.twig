{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Tên</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Giá</th>
                <td>{{ product.Price }}</td>
            </tr>
             <tr>
                <th>Mô Tả</th>
                <td>{{ product.description }}</td>
            </tr>
             <tr>
                <th>Hình Ảnh</th>
                <td><img src="{{ asset('images/product/' ~ product.getImage()) }}" width="200px" height="155px"></td>
            </tr>
            
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_product_index') }}">back to list</a>
    <a class="btn btn-dark" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
    <br></br>
      <form action="{{ path('app_add_cart', {'id': product.id}) }}" method="GET">Quantity:
     <input type="number" id="quantity" name="quantity" value="1">
      <button href="{{ path('app_add_cart', {'id': product.id}) }}" class="btn btn-primary" type="submit">ADD CART</button>
       <br></br>
       </form>
    {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}